@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = null; // Use custom layout for registration page
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alumni System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #e8eaf0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .register-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 450px;
        }

        .university-header {
            background: white;
            padding: 2rem 2rem 1rem 2rem;
            text-align: center;
            border-bottom: 1px solid #e9ecef;
        }

        .university-logo {
            margin: 0 auto 1rem auto;
            background: #2c3e50;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            /* Placeholder logo design matching the university style */
            .university-logo::before {
                content: '';
                position: absolute;
                width: 80%;
                height: 80%;
                background: radial-gradient(circle, transparent 30%, #2c3e50 30%, #2c3e50 35%, transparent 35%), conic-gradient(from 0deg, #2c3e50 0deg, transparent 10deg, #2c3e50 20deg, transparent 30deg, #2c3e50 40deg, transparent 50deg, #2c3e50 60deg, transparent 70deg, #2c3e50 80deg, transparent 90deg, #2c3e50 100deg, transparent 110deg, #2c3e50 120deg, transparent 130deg, #2c3e50 140deg, transparent 150deg, #2c3e50 160deg, transparent 170deg, #2c3e50 180deg, transparent 190deg, #2c3e50 200deg, transparent 210deg, #2c3e50 220deg, transparent 230deg, #2c3e50 240deg, transparent 250deg, #2c3e50 260deg, transparent 270deg, #2c3e50 280deg, transparent 290deg, #2c3e50 300deg, transparent 310deg, #2c3e50 320deg, transparent 330deg, #2c3e50 340deg, transparent 350deg, #2c3e50 360deg);
                border-radius: 50%;
            }

            .university-logo .logo-center {
                position: relative;
                z-index: 2;
                width: 40px;
                height: 40px;
                background: #2c3e50;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: bold;
                font-size: 0.7rem;
            }

        .university-name {
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.2rem;
            margin: 0 0 0.25rem 0;
            letter-spacing: 0.5px;
        }

        .university-subtitle {
            color: #2c3e50;
            font-weight: 600;
            font-size: 0.9rem;
            margin: 0 0 0.25rem 0;
        }

        .university-year {
            color: #666;
            font-size: 0.8rem;
            margin: 0;
        }

        .register-form-section {
            padding: 2rem;
        }

        .register-title {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #2c3e50;
            font-weight: 600;
            font-size: 1.3rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #4a90e2;
                box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.2);
            }

        .btn-register {
            width: 100%;
            background: #5cb85c;
            border: none;
            border-radius: 4px;
            padding: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            color: white;
            transition: background-color 0.3s ease;
            margin-bottom: 1.5rem;
        }

            .btn-register:hover {
                background: #449d44;
            }

        .register-links {
            text-align: center;
            padding-top: 1.5rem;
            border-top: 1px solid #e9ecef;
        }

            .register-links a {
                color: #4a90e2;
                text-decoration: none;
                transition: color 0.3s ease;
                font-weight: 500;
            }

                .register-links a:hover {
                    color: #357abd;
                    text-decoration: underline;
                }

        .alert {
            border-radius: 4px;
            margin-bottom: 1rem;
        }

        .text-danger {
            color: #dc3545 !important;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* Custom styles for when you add the university logo image */
        .university-logo.with-image {
            background: white;
            border: 2px solid #e9ecef;
        }

            .university-logo.with-image::before {
                display: none;
            }

            .university-logo.with-image img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }

        /* Password strength indicator */
        .password-requirements {
            font-size: 0.8rem;
            color: #666;
            margin-top: 0.5rem;
            line-height: 1.4;
        }

            .password-requirements ul {
                margin: 0.5rem 0 0 0;
                padding-left: 1.2rem;
            }

            .password-requirements li {
                margin-bottom: 0.2rem;
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .register-container {
                padding: 1rem;
            }

            .register-card {
                max-width: 100%;
            }

            .university-header {
                padding: 1.5rem 1.5rem 1rem 1.5rem;
            }

            .register-form-section {
                padding: 1.5rem;
            }

            .university-logo {
                width: 80px;
                height: 80px;
            }

            .university-name {
                font-size: 1.1rem;
            }

            .register-title {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <!-- University Header -->
            <div class="university-header">
                <!-- TODO: Replace this with your actual university logo -->
                <div class="university-logo with-image">
                    <img src="~/images/puLoginPic.png" alt="University Logo" />
                </div>

            <!-- Registration Form Section -->
            <div class="register-form-section">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Email">Имейл адрес</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Въведете вашия имейл" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Password">Парола</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Въведете парола" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="password-requirements">
                            <small>Паролата трябва да съдържа:</small>
                            <ul>
                                <li>Минимум 6 символа</li>
                                <li>Поне една главна буква</li>
                                <li>Поне една малка буква</li>
                                <li>Поне една цифра</li>
                                <li>Поне един специален символ</li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Input.ConfirmPassword">Потвърдете паролата</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Потвърдете паролата" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-register">
                        Регистрация
                    </button>

                    <div class="register-links">
                        <p>
                            Вече имате акаунт?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Влезте тук</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>