@model AlumniSystem.Core.ViewModels.PagedResult<AlumniSystem.Core.ViewModels.EventViewModel>
@{
    ViewData["Title"] = "Алумни събития";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-calendar-alt text-primary"></i>
                    Алумни събития
                </h1>
                <p class="page-subtitle">Участвайте в събития, лекции и възсъединения на университета</p>
            </div>
            <div class="col-md-4 text-md-end">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-university-primary">
                        <i class="fas fa-plus"></i> Създай събитие
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="university-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    @* <h5 class="mb-0">
                        <i class="fas fa-calendar"></i> Предстоящи и минали събития
                        <span class="badge badge-university ms-2">@Model.TotalCount събития</span>
                    </h5> *@
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover events-table mb-0">
                            <thead class="table-university">
                                <tr>
                                    <th><i class="fas fa-heading"></i> Заглавие</th>
                                    <th><i class="fas fa-clock"></i> Дата и час</th>
                                    <th><i class="fas fa-map-marker-alt"></i> Локация</th>
                                    <th class="text-center"><i class="fas fa-cogs"></i> Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="@(item.Date >= DateTime.Now ? "event-upcoming" : "event-past")">
                                        <td>
                                            <div class="event-title">
                                                <strong>@item.Title</strong>
                                                @if (item.Date >= DateTime.Now)
                                                {
                                                    <span class="badge badge-event-upcoming ms-2">Предстоящо</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-event-past ms-2">Минало</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="event-date">
                                                <i class="fas fa-calendar-check text-primary"></i>
                                                @item.Date.ToString("dd.MM.yyyy HH:mm")
                                            </div>
                                        </td>
                                        <td>
                                            <div class="event-location">
                                                <i class="fas fa-location-arrow text-primary"></i>
                                                @item.Location
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="Преглед на събитие">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-outline-warning btn-sm"
                                                       title="Редактирай събитие">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-outline-danger btn-sm"
                                                       title="Изтрий събитие">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Събития навигация">
                            <ul class="pagination pagination-university justify-content-center mb-0">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">
                                        <i class="fas fa-chevron-left"></i> Предишна
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">
                                        Следваща <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>