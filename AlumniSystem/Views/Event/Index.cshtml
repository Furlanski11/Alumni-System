@model AlumniSystem.Core.ViewModels.PagedResult<AlumniSystem.Core.ViewModels.EventViewModel>
<h1>Събития</h1>
<p><a asp-action="Create" class="btn btn-primary">Добави ново събитие</a></p>
<table class="table">
  <thead>
    <tr><th>Заглавие</th><th>Дата</th><th>Локация</th><th></th></tr>
  </thead>
  <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
          <td>@item.Title</td>
          <td>@item.Date</td>
          <td>@item.Location</td>
          <td>
            <a asp-action="Details" asp-route-id="@item.Id">Преглед</a> |
            <a asp-action="Edit" asp-route-id="@item.Id">Редакция</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
          </td>
        </tr>
        }
  </tbody>
</table>