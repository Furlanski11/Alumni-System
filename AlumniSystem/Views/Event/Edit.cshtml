@model AlumniSystem.Core.ViewModels.EventViewModel
@{
    ViewData["Title"] = "Редакция на алумни събитие";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-edit text-primary"></i>
                    Редакция на събитие
                </h1>
                <p class="page-subtitle">Актуализирайте информацията за алумни събитието</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-outline-university">
                    <i class="fas fa-arrow-left"></i> Назад
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="university-card form-card">
                <div class="card-header bg-university text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-alt"></i>
                        Редактиране на събитие: @Model.Title
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" class="university-form" id="event-edit-form">
                        <input type="hidden" asp-for="Id" />

                        <!-- Event Status Section -->
                        <div class="form-section">
                            <div class="form-section-header">
                                <h6><i class="fas fa-info-circle"></i> Статус на събитието</h6>
                            </div>

                            <div class="event-status-preview">
                                <div class="stat-item-inline">
                                    <i class="fas fa-calendar-check text-primary"></i>
                                    Събитието е
                                    @if (Model.Date >= DateTime.Now)
                                    {
                                        <span class="badge badge-event-upcoming">предстоящо</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-event-past">минало</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Event Basic Information Section -->
                        <div class="form-section">
                            <div class="form-section-header">
                                <h6><i class="fas fa-edit"></i> Основна информация</h6>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="Title" class="form-label">
                                            <i class="fas fa-heading text-primary"></i> Заглавие на събитието
                                        </label>
                                        <input asp-for="Title" class="form-control university-input" placeholder="Въведете заглавие на събитието" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Date" class="form-label">
                                            <i class="fas fa-clock text-primary"></i> Дата и час
                                        </label>
                                        <input asp-for="Date" class="form-control university-input" type="datetime-local" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                        @if (Model.Date < DateTime.Now)
                                        {
                                            <small class="form-text text-warning">
                                                <i class="fas fa-exclamation-triangle"></i>
                                                Внимание: Събитието вече е минало.
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Location" class="form-label">
                                    <i class="fas fa-map-marker-alt text-primary"></i> Локация
                                </label>
                                <input asp-for="Location" class="form-control university-input" placeholder="Въведете мястото на провеждане" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Включете адрес, зала, или друга полезна информация за локацията.
                                </small>
                            </div>
                        </div>

                        <!-- Event Description Section -->
                        <div class="form-section">
                            <div class="form-section-header">
                                <h6><i class="fas fa-file-alt"></i> Описание на събитието</h6>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label">
                                    <i class="fas fa-align-left text-primary"></i> Подробно описание
                                </label>
                                <textarea asp-for="Description" class="form-control university-input" rows="8"
                                          placeholder="Опишете събитието, програмата, целевата аудитория и други важни детайли..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-lightbulb"></i>
                                    Включете информация за програмата, лекторите, целевата група и начина на участие.
                                </small>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <div class="btn-group-university" role="group">
                        <button type="submit" form="event-edit-form" class="btn btn-university-primary btn-lg">
                            <i class="fas fa-save"></i> Запази промените
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times"></i> Отказ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}