@using AlumniSystem.Infrastructure.Models.Enums
@model AlumniSystem.Core.ViewModels.PagedResult<AlumniSystem.Core.ViewModels.AlumniViewModel>
@{
    ViewData["Title"] = "Алумни мрежа";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-users text-primary"></i>
                    Алумни мрежа
                </h1>
                <p class="page-subtitle">Открийте и се свържете с възпитаниците на Пловдивския университет</p>
            </div>
            <div class="col-md-4 text-md-end">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-university-primary">
                        <i class="fas fa-user-plus"></i> Създай алумни профил
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="university-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                     <h5 class="mb-0">
                        <i class="fas fa-list"></i> Всички алумни
                        <span class="badge badge-university ms-2">@Model.TotalItems души</span>
                    </h5> 
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover alumni-table mb-0">
                            <thead class="table-university">
                                <tr>
                                    <th><i class="fas fa-id-card"></i> Фак. номер</th>
                                    <th><i class="fas fa-user"></i> Име</th>
                                    <th><i class="fas fa-graduation-cap"></i> Факултет</th>
                                    <th><i class="fas fa-calendar-alt"></i> Завършване</th>
                                    <th><i class="fas fa-book"></i> Специалност</th>
                                    <th><i class="fas fa-briefcase"></i> Професия</th>
                                    <th><i class="fas fa-envelope"></i> Имейл</th>
                                    <th class="text-center"><i class="fas fa-cogs"></i> Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <span class="faculty-number">@a.FacultyNumber</span>
                                        </td>
                                        <td>
                                            <div class="alumni-name">
                                                <strong>@($"{a.FirstName} {a.Surname} {a.LastName}")</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-faculty">@((Faculty)a.Faculty)</span>
                                        </td>
                                        <td>
                                            <span class="graduation-year">@a.GraduationYear.Year</span>
                                        </td>
                                        <td>@a.Degree</td>
                                        <td>@a.CurrentPosition</td>
                                        <td>
                                            <a href="mailto:@a.Email" class="email-link">@a.Email</a>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@a.UserId"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="Преглед на профил">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="EditUser" asp-route-id="@a.UserId"
                                                       class="btn btn-outline-warning btn-sm"
                                                       title="Редактирай профил">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@a.UserId"
                                                       class="btn btn-outline-danger btn-sm"
                                                       title="Изтрий профил">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Алумни навигация">
                            <ul class="pagination pagination-university justify-content-center mb-0">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">
                                        <i class="fas fa-chevron-left"></i> Предишна
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">
                                        Следваща <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>