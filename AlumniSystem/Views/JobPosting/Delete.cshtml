@model AlumniSystem.Core.ViewModels.JobPostingViewModel

@{
    ViewData["Title"] = "Изтриване на обява";
}

<h1>@ViewData["Title"]</h1>
<h3>Сигурни ли сте, че искате да изтриете тази обява?</h3>

<dl class="row">
    <dt class="col-sm-2">Заглавие</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Компания</dt>
    <dd class="col-sm-10">@Model.Company</dd>

    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.PostedOn:yyyy-MM-dd</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Да, изтрий</button>
    <a asp-action="Index" class="btn btn-link">Не, върни ме назад</a>
</form>