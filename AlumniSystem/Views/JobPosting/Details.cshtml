@model AlumniSystem.Core.ViewModels.JobPostingViewModel

@{
    ViewData["Title"] = "Преглед на обява";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Заглавие</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Компания</dt>
    <dd class="col-sm-10">@Model.Company</dd>

    <dt class="col-sm-2">Описание</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Локация</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.PostedOn:yyyy-MM-dd</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Назад към списъка</a>
    @if (User.IsInRole("Admin"))
        {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактирай</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Изтрий</a>
        }
</p>