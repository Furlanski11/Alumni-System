@model AlumniSystem.Core.ViewModels.JobPostingViewModel
@{
    ViewData["Title"] = $"Позиция: {Model.Title}";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-briefcase text-primary"></i>
                    Работна позиция
                </h1>
                <p class="page-subtitle">Детайлна информация за позицията</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-outline-university">
                    <i class="fas fa-arrow-left"></i> Всички позиции
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="university-card job-posting-card">
                <div class="card-header text-center bg-university">
                    <div class="job-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3 class="job-name text-white mb-1">
                        @Model.Title
                    </h3>
                    <p class="job-company text-white-50 mb-0">
                        @Model.Company
                    </p>
                    <div class="job-freshness-header mt-2">
                        @if ((DateTime.Now - Model.PostedOn).TotalDays <= 7)
                        {
                            <span class="badge badge-job-new-large">Нова позиция</span>
                        }
                        else if ((DateTime.Now - Model.PostedOn).TotalDays <= 30)
                        {
                            <span class="badge badge-job-recent-large">Актуална позиция</span>
                        }
                        else
                        {
                            <span class="badge badge-job-old-large">Стара позиция</span>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-building text-primary"></i>
                                    <strong>Компания</strong>
                                </div>
                                <div class="detail-value">@Model.Company</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                    <strong>Локация</strong>
                                </div>
                                <div class="detail-value">@Model.Location</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-calendar-plus text-primary"></i>
                                    <strong>Публикувана на</strong>
                                </div>
                                <div class="detail-value">
                                    <span class="posted-date-badge">@Model.PostedOn.ToString("dd.MM.yyyy")</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-clock text-primary"></i>
                                    <strong>Активна от</strong>
                                </div>
                                <div class="detail-value">
                                    @{
                                        var daysSince = (DateTime.Now - Model.PostedOn).TotalDays;
                                        var displayText = daysSince < 1 ? "Днес" :
                                        daysSince < 2 ? "1 ден" :
                                        daysSince < 30 ? $"{(int)daysSince} дни" :
                                        daysSince < 60 ? "1 месец" :
                                        $"{(int)(daysSince / 30)} месеца";
                                    }
                                    @displayText
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-file-alt text-primary"></i>
                                    <strong>Описание на позицията</strong>
                                </div>
                                <div class="detail-value job-description">
                                    @Html.Raw(Model.Description?.Replace("\n", "<br/>"))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> Всички позиции
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Редактирай
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Изтрий
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>