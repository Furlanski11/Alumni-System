@model AlumniSystem.Core.ViewModels.CommunityViewModel
@{
    ViewData["Title"] = "Редакция на алумни общност";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-edit text-primary"></i>
                    Редакция на общност
                </h1>
                <p class="page-subtitle">Актуализирайте информацията за алумни общността</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-outline-university">
                    <i class="fas fa-arrow-left"></i> Назад
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="university-card form-card">
                <div class="card-header bg-university text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-friends"></i>
                        Редактиране на общност: @Model.Name
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" class="university-form" id="community-edit-form">
                        <input type="hidden" asp-for="Id" />

                        <!-- Community Information Section -->
                        <div class="form-section">
                            <div class="form-section-header">
                                <h6><i class="fas fa-info-circle"></i> Основна информация</h6>
                            </div>

                            <div class="form-group">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-tag text-primary"></i> Име на общността
                                </label>
                                <input asp-for="Name" class="form-control university-input" placeholder="Въведете име на общността" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Изберете описателно име, което ясно показва темата или интереса на общността.
                                </small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label">
                                    <i class="fas fa-align-left text-primary"></i> Описание на общността
                                </label>
                                <textarea asp-for="Description" class="form-control university-input" rows="6"
                                          placeholder="Опишете целта, дейностите и това, което прави общността уникална..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-lightbulb"></i>
                                    Включете информация за целите, дейностите и как алумните могат да се включат.
                                </small>
                            </div>
                        </div>

                        <!-- Community Stats Section -->
                        @if (Model.Members != null && Model.Members.Any())
                        {
                            <div class="form-section">
                                <div class="form-section-header">
                                    <h6><i class="fas fa-users"></i> Статистика на общността</h6>
                                </div>

                                <div class="stats-preview">
                                    <div class="stat-item-inline">
                                        <i class="fas fa-users text-primary"></i>
                                        <strong>@Model.Members.Count</strong> активни члена
                                    </div>
                                </div>
                            </div>
                        }
                    </form>
                </div>

                <div class="card-footer text-center">
                    <div class="btn-group-university" role="group">
                        <button type="submit" form="community-edit-form" class="btn btn-university-primary btn-lg">
                            <i class="fas fa-save"></i> Запази промените
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times"></i> Отказ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}