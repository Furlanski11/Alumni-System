@model AlumniSystem.Core.ViewModels.CommunityViewModel
@{
    ViewData["Title"] = "Изтриване на общност";
}

<div class="university-page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-exclamation-triangle text-warning"></i>
                    Изтриване на общност
                </h1>
                <p class="page-subtitle">Потвърждение за премахване на алумни общност</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-outline-university">
                    <i class="fas fa-arrow-left"></i> Назад
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="university-card delete-confirmation-card">
                <div class="card-header text-center bg-warning">
                    <div class="warning-icon">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <h3 class="warning-title text-dark mb-1">
                        Внимание!
                    </h3>
                    <p class="warning-subtitle text-dark mb-0">
                        Това действие е необратимо
                    </p>
                </div>

                <div class="card-body">
                    <div class="delete-warning text-center mb-4">
                        <h5 class="text-danger mb-3">
                            <i class="fas fa-question-circle"></i>
                            Сигурни ли сте, че искате да изтриете тази общност?
                        </h5>
                        <p class="text-muted">
                            След изтриването, общността и всички членства в нея ще бъдат премахнати завинаги.
                        </p>
                    </div>

                    <div class="job-details-preview">
                        <h6 class="preview-title">
                            <i class="fas fa-user-friends"></i> Преглед на общността за изтриване:
                        </h6>

                        <div class="preview-card">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <div class="detail-label">
                                            <i class="fas fa-tag text-primary"></i>
                                            <strong>Име на общността</strong>
                                        </div>
                                        <div class="detail-value job-title-delete">@Model.Name</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="detail-item">
                                        <div class="detail-label">
                                            <i class="fas fa-users text-primary"></i>
                                            <strong>Брой членове</strong>
                                        </div>
                                        <div class="detail-value">
                                            <span class="badge badge-community-members">@Model.Members.Count члена</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="detail-item">
                                        <div class="detail-label">
                                            <i class="fas fa-info-circle text-primary"></i>
                                            <strong>Описание</strong>
                                        </div>
                                        <div class="detail-value job-description-preview">
                                            @Model.Description
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="btn-group-university delete-actions" role="group">
                            <button type="submit" class="btn btn-danger btn-lg delete-confirm-btn">
                                <i class="fas fa-users-slash"></i> Да, изтрий общността завинаги
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times"></i> Не, върни ме назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>